{
  "name": "@enlearn/springroll",
  "version": "0.9.0",
  "description": "SpringRoll plugin for the Enlearn platform.",
  "license": "MIT",
  "homepage": "https://github.com/engagedlearning/springroll-enlearn",
  "bugs": "https://github.com/engagedlearning/springroll-enlearn/issues",
  "repository": {
    "url": "https://github.com:engagedlearning/springroll-enlearn",
    "type": "git"
  },
  "main": "dist/springroll-enlearn.umd.js",
  "module": "dist/springroll-enlearn.esm.js",
  "files": [
    "dist/*.js"
  ],
  "scripts": {
    "build": "rimraf dist && rollup -c",
    "lint": "eslint .",
    "lint:fix": "yarn lint --fix",
    "prettier": "prettier --write \"**/*.md\" \"**/*.js\" \"**/*.json\"",
    "release-it": "release-it",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn build && yarn test"
    }
  },
  "lint-staged": {
    "!**.js": [
      "prettier --write",
      "git add"
    ],
    "**.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "peerDependencies": {
    "springroll": "^1.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.0.1",
    "@babel/preset-env": "^7.0.0",
    "@enlearn/eslint-config": "^1.0.0",
    "babel-core": "^7.0.0-0",
    "babel-jest": "^23.6.0",
    "changelog-parser": "^2.5.0",
    "eslint": "^5.6.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^21.22.0",
    "eslint-plugin-promise": "^4.0.1",
    "husky": "^1.0.0-rc.14",
    "jest": "^23.6.0",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2",
    "release-it": "^7.6.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.66.0",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-cleanup": "^3.0.0",
    "rollup-plugin-commonjs": "^9.1.6",
    "rollup-plugin-license": "^0.7.0",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-terser": "^3.0.0"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  }
}
